<form id="login-form"  action="/login" method="POST">
    <h2>Login</h2>
    <label for="user-login">Username</label>
    <input id="user-login" type="text" name="username" placeholder="Insert Username">
    <label for="password-login">Password</label>
    <input id="password-login" type="password" name="password" placeholder="Insert Password">
    <button class="auth-button" type="submit">Log in</button>
</form>